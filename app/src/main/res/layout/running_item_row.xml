<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/linearItemExcersiseLayout">

    <FrameLayout
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
        android:id="@+id/imageViewActivityItem"
        android:scaleType="centerCrop"
        android:src="@drawable/activity_background"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
        <ImageView
            android:layout_gravity="end"
            android:id="@+id/imageViewCompleted"
            android:background="@color/black"
            android:src="@drawable/ic_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <LinearLayout
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewActivityItemName"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textViewActivityItemTimeSum"
            android:textColor="@color/grey_300"
            android:drawableStart="@drawable/ic_timer"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>