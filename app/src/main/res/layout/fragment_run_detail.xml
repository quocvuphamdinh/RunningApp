<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.appbar.AppBarLayout
            app:elevation="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/appBarRunDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                app:contentInsetStart="0dp"
                app:contentInsetLeft="0dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <LinearLayout
                    android:weightSum="10"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_alignParentStart="true"
                        android:layout_gravity="start"
                        android:id="@+id/imageCloseRunDetail"
                        android:src="@drawable/ic_close"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/textViewTitleRunDetail"
                        android:gravity="center_vertical"
                        android:paddingStart="90dp"
                        android:layout_weight="9"
                        android:fontFamily="@font/oswald"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="@string/app_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:scaleType="centerCrop"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:id="@+id/imageDeteleRunDetail"
                        android:src="@drawable/ic_trash_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"/>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:id="@+id/scrollViewRunDetailFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="10dp"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="1"
                        android:src="@drawable/ic_moving_time_color"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginStart="5dp"
                        android:layout_weight="3"
                        android:textSize="18sp"
                        android:text="Start Time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textViewMovingTimeRunDetail"
                        android:textColor="@color/distance_color"
                        android:fontFamily="@font/secular_one_regular"
                        android:textStyle=""
                        android:textSize="18sp"
                        android:gravity="end"
                        android:layout_weight="6"
                        android:text="00:00:00 hrs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:padding="10dp"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="1"
                        android:src="@drawable/ic_distance_color"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginStart="5dp"
                        android:layout_weight="3"
                        android:textSize="18sp"
                        android:text="Distance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textViewDistanceRunDetail"
                        android:textColor="@color/distance_color"
                        android:fontFamily="@font/secular_one_regular"
                        android:textStyle=""
                        android:textSize="18sp"
                        android:gravity="end"
                        android:layout_weight="6"
                        android:text="0.0 km"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:padding="10dp"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="1"
                        android:src="@drawable/ic_calories_color"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginStart="5dp"
                        android:layout_weight="4"
                        android:textSize="18sp"
                        android:text="Calories Burned"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textViewCaloriesBurnedRunDetail"
                        android:textColor="@color/calories_color"
                        android:fontFamily="@font/secular_one_regular"
                        android:textStyle=""
                        android:textSize="18sp"
                        android:gravity="end"
                        android:layout_weight="5"
                        android:text="0 Kcal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:padding="10dp"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="1"
                        android:src="@drawable/ic_avg_speed_color"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginStart="5dp"
                        android:layout_weight="4"
                        android:textSize="18sp"
                        android:text="Average Speed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textViewAverageSpeedRunDetail"
                        android:textColor="@color/avg_speed_color"
                        android:fontFamily="@font/secular_one_regular"
                        android:textStyle=""
                        android:textSize="18sp"
                        android:gravity="end"
                        android:layout_weight="5"
                        android:text="0 km/h"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:padding="10dp"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="1"
                        android:src="@drawable/ic_duration_color"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginStart="5dp"
                        android:layout_weight="3"
                        android:textSize="18sp"
                        android:text="Duration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textViewDurationRunDetail"
                        android:textColor="@color/duration_color"
                        android:fontFamily="@font/secular_one_regular"
                        android:textStyle=""
                        android:textSize="18sp"
                        android:gravity="end"
                        android:layout_weight="6"
                        android:text="00:00 mins"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <pl.droidsonroids.gif.GifImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/imageViewRunDetail"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>