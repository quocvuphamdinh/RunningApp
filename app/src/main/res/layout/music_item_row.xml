<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:paddingVertical="10dp"
    android:paddingHorizontal="20dp"
    android:id="@+id/relativeLayoutMusic">
    <TextView
        android:id="@+id/textViewNameMusicItem"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/textViewNameMusicItem"
        android:id="@+id/textViewAuthorMusicItem"
        android:textSize="14sp"
        android:textColor="@color/grey_80"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageViewMusicGif"
        android:src="@drawable/ic_music_gif"
        android:layout_alignParentEnd="true"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

</RelativeLayout>