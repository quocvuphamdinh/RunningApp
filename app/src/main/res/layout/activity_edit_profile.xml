<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.EditProfileActivity"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            app:elevation="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/appBarEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                app:contentInsetStart="0dp"
                app:contentInsetLeft="0dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:textColor="@color/grey_100"
                        android:id="@+id/textViewCancelEditProfile"
                        android:text="Cancel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:paddingStart="15dp"
                        android:gravity="center"
                        android:layout_weight="6"
                        android:fontFamily="@font/oswald"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="Edit profile"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:textColor="@color/grey_100"
                        android:id="@+id/textViewSaveEditProfile"
                        android:text="Save"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="20dp"
                    android:text="Username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/editTextUsernameEditProfile"
                    android:paddingHorizontal="10dp"
                    android:hint="Edit username here"
                    android:background="@drawable/custom_edit_text"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="20dp"
                    android:text="Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/frame_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:inputType="textPassword"
                        android:id="@+id/editTextPasswordEditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edit_text"
                        android:hint="Edit password"
                        android:padding="10dp"
                        android:textColorHint="@color/grey_100" />
                    <TextView
                        android:id="@+id/textViewShowHidePasswordEditProfile"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="end"
                        android:text="SHOW"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </FrameLayout>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="20dp"
                    android:text="Fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/editTextFullnameEditProfile"
                    android:paddingHorizontal="10dp"
                    android:hint="Edit fullname here"
                    android:background="@drawable/custom_edit_text"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="20dp"
                    android:text="Gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/spinnerGioiTinhEditProfile"
                        android:layout_width="match_parent"
                        android:background="@drawable/custom_edit_text"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_arrow_down"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </FrameLayout>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="20dp"
                    android:text="Height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:drawableEnd="@drawable/ic_height"
                    android:inputType="number"
                    android:id="@+id/editTextHeightEditProfile"
                    android:paddingHorizontal="10dp"
                    android:hint="Edit height here"
                    android:background="@drawable/custom_edit_text"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="20dp"
                    android:text="Weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_marginBottom="50dp"
                    android:drawableEnd="@drawable/ic_weight"
                    android:inputType="number"
                    android:id="@+id/editTextWeightEditProfile"
                    android:paddingHorizontal="10dp"
                    android:hint="Edit Weight here"
                    android:background="@drawable/custom_edit_text"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>